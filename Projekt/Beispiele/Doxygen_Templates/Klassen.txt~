// ========================================DOKUMENTATION============================================
///\class 	cname
///\brief 	Beschreibung der Klasse.
// -------------------------------------------------------------------------------------------------
///@tparam	dtype 	Beschreibung der Template Variable.
// =================================================================================================
   template<typename dtype> ///
   class cname
   {
#pragma region PRIVATE_VARIABLES
	int  _var;	///<	_var 	Beschreibung der Variable
	int* _arr;	///<	_arr 	Beschreibung des Array-Pointers
#pragma endregion

public:

#pragma region PUBLIC_VARIABLES
	int  _var;	///<	_var 	Beschreibung der Variable
	int* _arr;	///<	_arr 	Beschreibung des Array-Pointers
#pragma endregion

#pragma region CONSTRUCTORS
// ========================================DOKUMENTATION============================================
//				       Standard-Konstruktor
///\brief	Beschreibung des Standard-Konstruktor.
// -------------------------------------------------------------------------------------------------
	cname() : _var(0), _ptr(NULL) { }
// =================================================================================================

// ========================================DOKUMENTATION============================================
//					  Dim-Konstruktor
///\brief	Beschreibung des Konstruktors.
// -------------------------------------------------------------------------------------------------
///@param 	var		Beschreibung der Variable.
// -------------------------------------------------------------------------------------------------
	cname(int var) : _var(var)
	{
		_data = new dtype[var];
	}
// =================================================================================================

// ========================================DOKUMENTATION============================================
//					    Destruktor
///\brief	Definition des Destruktors
// -------------------------------------------------------------------------------------------------
	~cname() { delete[] _arr; }
// =================================================================================================
#pragma endregion

#pragma region OPERATORS

#pragma endregion

#pragma region GETTER_SETTER

#pragma endregion

#pragma region MEMBER_FUNCTIONS

#pragma endregion
   };
